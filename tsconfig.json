{
    "compilerOptions": {
        "target": "es5",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowUnreachableCode": true,
        "listFiles": false,
        "inlineSourceMap": true,
        "inlineSources": true
    },
    "exclude": [
        "bower_components",
        "node_modules"
    ]
}